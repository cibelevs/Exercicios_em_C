#include <stdio.h>
int main ()
{
   float valor;
   int i = 1;
   
   printf("Insira um valor: ");
   scanf("%f", &valor);

   while (i<=3)
  {
    valor = valor/10;
    printf("%f", valor);
    i++;
    printf ("\n");
  } 
   

return 0;

}






#include <stdio.h>

int main()
{
  int num;
  int i = 0;
  printf("Insira um número: ");
  scanf("%d", &num);

  printf ("Imprimindo a tabuada do %d \n", num);
  for (i = 0; i<=10; i++)
  {
    printf (" %d x % d = %d", num , i, num*i);
    printf("\n");
  }
  return 0;
}
