//Fazer um programa em C que pergunta um valor em metros e imprime o correspondente em decímetros, centímetros e milímetros.


#include <stdio.h>
int main ()
{
   float valor;

   printf("Insira um valor: ");
   scanf("%f", &valor);

   float dec = (valor/10);
   float cent = (valor/100);
   float mili = (valor/1000);
   
   printf("Decimetros: %f \n Centimetros: %f \n Milimetros: %f", dec, cent, mili);  

return 0;
}
